<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nanshanstudio.viewstudy.cview.CVGActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.nanshanstudio.viewstudy.cviewgroup.focus.CSimpleViewGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.nanshanstudio.viewstudy.cviewgroup.focus.CSimpleViewGroup>


        <com.nanshanstudio.viewstudy.cviewgroup.focus.CAddImageView
            android:id="@+id/photoview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:ninephoto_hspace="10dp"
            custom:ninephoto_vspace="10dp">

        </com.nanshanstudio.viewstudy.cviewgroup.focus.CAddImageView>


        <com.nanshanstudio.viewstudy.cviewgroup.focus.CFourView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#25000000">

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#FF4444"
                android:gravity="center"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#00ff00"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#ff0000"
                android:gravity="center"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#0000ff"
                android:gravity="center"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />


        </com.nanshanstudio.viewstudy.cviewgroup.focus.CFourView>
    </LinearLayout>

</RelativeLayout>
