<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomTitleView">
        <attr name="titleText" format="string" />
        <attr name="titleTextColor" format="color" />
        <attr name="titleTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CustomSwitch">
        <attr name="switch_background" format="reference"/>
        <attr name="switch_foreground" format="reference"/>
        <attr name="switch_state" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CustomCircle">
        <attr name="circle_background" format="color"/>
        <attr name="circle_foreground" format="color"/>
        <attr name="circle_speed" format="integer"/>
        <attr name="circle_width" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CustomImageText">

        <attr name="text" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="image" format="reference" />
        <attr name="imageScaleType">
            <enum name="fillXY" value="0" />
            <enum name="center" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="AddImageView">
        <attr name="ninephoto_hspace" format="dimension"/>
        <attr name="ninephoto_vspace" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CVoiceView">
        <attr name="firstColor" format="color"/>
        <attr name="secondColor" format="color"/>
        <attr name="circleWidth" format="dimension"/>
        <attr name="splitSize" format="integer"/>
        <attr name="count" format="integer"/>
        <attr name="bg" format="reference"/>
    </declare-styleable>


    <declare-styleable name="CourseTable">
        <attr name="totalDays" format="integer" />
        <attr name="totalJC" format="integer" />
    </declare-styleable>


</resources>
